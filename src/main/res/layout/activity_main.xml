<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayush.fragmentapplication.MainActivity">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Layout1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt1"
        android:layout_below="@+id/bt1"
        android:text="Layout2" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt2"
        android:layout_below="@+id/bt2"
        android:layout_marginTop="16dp"
        android:text="Layout3" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt3"
        android:layout_below="@+id/bt3"
        android:layout_marginTop="22dp"
        android:text="Layout4" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.ayush.fragmentapplication.MyFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        tools:layout="@layout/fragment_layout"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
